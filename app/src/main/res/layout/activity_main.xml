<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/mainColorGray"
    tools:context=".MainActivity">

    <GridLayout
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <!--row0 col0 -->

        <androidx.cardview.widget.CardView
            android:id="@+id/workersButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_column="0"
            android:layout_row="0"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="26dp"
                android:src="@drawable/ic_person_burgund_24dp" />

        </androidx.cardview.widget.CardView>


        <!--row0 col1 -->

        <androidx.cardview.widget.CardView
            android:id="@+id/navigationButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_column="1"
            android:layout_row="0">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="26dp"
                android:src="@drawable/ic_map_black_24dp" />

        </androidx.cardview.widget.CardView>


        <!--row1 col0 -->

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_column="0"
            android:layout_row="1">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/beaconInformationButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="27dp"
                android:src="@drawable/ic_class_black_24dp" />

        </androidx.cardview.widget.CardView>

        <!--row1 col1 -->

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_column="1"
            android:layout_row="1">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/beaconNavigationButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="26dp"
                android:src="@drawable/ic_place_black_24dp" />

        </androidx.cardview.widget.CardView>



    </GridLayout>



</LinearLayout>